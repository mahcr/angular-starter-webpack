{
  "name": "angular2-webpack",
  "version": "1.0.0",
  "description": "Angular 2 stater kit using webpack",
  "scripts": {
    "build:prod": "rimraf dist && webpack --config config/webpack.config.prod.js --progress --profile --bail",
    "build:dev": "rimraf dist && webpack --config config/webpack.config.prod.js --progress --profile --bail",
    "build:stage": "rimraf dist && webpack --config config/webpack.config.prod.js --progress --profile --bail",
    "clean:dist": "npm run rimraf -- dist",
    "config-env": "rimraf .src/app/global/config.ts && node config/scripts/copy-files.js",
    "http-server": "http-server",
    "mockdata": "npm run rimraf ./src/app/global/api/*.js && node config/scripts/create-mockdata.js",
    "server:dev": "webpack-dev-server --inline --progress --port 8080  --host 0.0.0.0 --open",
    "server:prod": "npm run http-server -- ./dist/ -o",
    "prebuild:dev":"npm run config-env",
    "prebuild:stage":"npm run config-env -- --env=stage",
    "prebuild:prod":"npm run config-env -- --env=prod",
    "prestart": "npm run config-env",
    "start": "npm run server:dev",
    "tslint": "tslint \"src/**/*.ts\"",
    "rimraf": "rimraf"
  },
  "dependencies": {
    "@angular/common": "2.4.3",
    "@angular/compiler": "2.4.3",
    "@angular/core": "2.4.3",
    "@angular/forms": "2.4.3",
    "@angular/http": "2.4.3",
    "@angular/platform-browser": "2.4.3",
    "@angular/platform-browser-dynamic": "2.4.3",
    "@angular/router": "3.4.3",
    "@ngrx/core": "^1.2.0",
    "@ngrx/store": "^2.2.1",
    "core-js": "^2.4.1",
    "rxjs": "5.0.3",
    "zone.js": "^0.7.2"
  },
  "devDependencies": {
    "@angular/compiler-cli": "2.4.3",
    "@angular/platform-server": "2.4.3",
    "@ngtools/webpack": "^1.2.3",
    "@types/core-js": "^0.9.35",
    "@types/node": "^7.0.0",
    "angular2-router-loader": "^0.3.4",
    "angular2-template-loader": "^0.6.0",
    "awesome-typescript-loader": "^3.0.0-beta.17",
    "chalk": "^1.1.3",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "~2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.3",
    "html-webpack-plugin": "2.26.0",
    "http-server": "^0.9.0",
    "json-schema-faker": "^0.4.0",
    "node-sass": "^4.1.1",
    "optimize-css-assets-webpack-plugin": "^1.3.0",
    "postcss-cssnext": "^2.9.0",
    "postcss-import": "^9.0.0",
    "postcss-loader": "^1.2.1",
    "raw-loader": "^0.5.1",
    "resolve-url-loader": "^1.6.1",
    "rimraf": "^2.5.2",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.3.1",
    "tslint-loader": "^3.3.0",
    "typescript": "^2.1.4",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^2.2.0",
    "webpack-md5-hash": "0.0.5",
    "webpack-merge": "^2.3.1",
    "yargs": "^6.6.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/malvarezhcr/angular2-webpack.git"
  },
  "keywords": [
    "webpack",
    "angular"
  ],
  "author": "Mariano Alvarez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/malvarezhcr/angular2-webpack/issues"
  },
  "homepage": "https://github.com/malvarezhcr/angular2-webpack#readme"
}
